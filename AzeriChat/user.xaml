<UserControl x:Class="AzeriChat.user"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AzeriChat"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="450" Height="80" Width="450">
    <Canvas>
        <Image Width="80" Height="80" Source="{Binding UserImg.Source}"></Image>
        <TextBlock x:Name="UsernameTxt" Canvas.Left="85" Margin="30,10,0,0" Text="{Binding UserName}" FontSize="20" VerticalAlignment="Center" ></TextBlock>
        <TextBlock x:Name="LastMessageTxt" Canvas.Left="85" Canvas.Top="30" Margin="30,10,0,0" Text="{Binding Phone}" FontSize="18" VerticalAlignment="Center" FontWeight="Light" Foreground="Gray" ></TextBlock>
    </Canvas>
</UserControl>
