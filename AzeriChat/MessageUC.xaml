<UserControl x:Class="AzeriChat.MessageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AzeriChat"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="450" Width="450">
    <Grid>
        <TextBlock TextWrapping="Wrap" Width="450" Text="{Binding Message}"></TextBlock>
        <Label Foreground="#EAEEEF" Content="{Binding Time}"></Label>
    </Grid>
</UserControl>
